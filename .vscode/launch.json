{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serve",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["serve", "-s", ".", "-l", "3000"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Tailwind CSS"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serve (Watch CSS)",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["serve", "-s", ".", "-l", "3000"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Watch Tailwind CSS"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open in Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Tailwind CSS"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test UI",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--ui"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Tailwind CSS"
    }
  ]
}