{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Tailwind CSS (Production)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build-css-prod"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Build minified Tailwind CSS for production"
    },
    {
      "label": "Build Tailwind CSS (Watch)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build-css"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".*",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Rebuilding.*$",
            "endsPattern": "^.*Done in.*$"
          }
        }
      ],
      "detail": "Watch and rebuild Tailwind CSS on file changes"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Run Playwright end-to-end tests"
    },
    {
      "label": "Run Tests (UI Mode)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:ui"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Run Playwright tests in interactive UI mode"
    }
  ]
}