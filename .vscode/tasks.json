{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Tailwind CSS",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build-css-prod"],
      "group": "build"
    },
    {
      "label": "Watch Tailwind CSS",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build-css"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": "test"
    },
    {
      "label": "Test UI",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:ui"],
      "group": "test"
    }
  ]
}